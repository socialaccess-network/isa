{
	"name": "@sa-net/isa",
	"version": "0.0.4",
	"type": "module",
	"license": "Unlicense",
	"author": {
		"name": "SocialAccess Network",
		"email": "business@socialaccess.network"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/socialaccess-network/isa.git"
	},
	"bugs": {
		"url": "https://github.com/socialaccess-network/isa/issues"
	},
	"packageManager": "yarn@3.3.0",
	"main": "dist/index.mjs",
	"types": "src/index.ts",
	"exports": {
		"./package.json": "./package.json",
		".": {
			"require": "./dist/index.cjs",
			"import": "./dist/index.mjs",
			"types": "./dist/index.d.ts"
		}
	},
	"files": [
		"dist",
		"src",
		"package.json",
		"README.md",
		"LICENSE"
	],
	"scripts": {
		"dev": "nodemon",
		"build:vite": "vite build",
		"build:tsc": "tsc",
		"build": "run-s build:vite build:tsc",
		"publish": "yarn build && yarn npm publish --access public"
	},
	"nodemonConfig": {
		"exec": "ts-node-esm src/index.ts",
		"ext": "ts",
		"watch": [
			"src"
		]
	},
	"dependencies": {
		"@michealpearce/utils": "^0.0"
	},
	"devDependencies": {
		"@types/node": "^18.15.5",
		"nodemon": "^2.0.21",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.8.6",
		"ts-node": "^10.9.1",
		"typescript": "^5.0.2",
		"vite": "^4.2.1"
	}
}
